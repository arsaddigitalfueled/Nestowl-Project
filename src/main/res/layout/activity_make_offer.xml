<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".MakeOfferActivity">
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" >

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="55dp">



                <LinearLayout
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:src="@drawable/left_arrow"
                        android:layout_width="15sp"
                        android:layout_gravity="center_vertical"
                        android:layout_height="15sp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginLeft="10dp"
                        android:layout_height="wrap_content"
                        >

                        <TextView
                            android:text="Make Offer"
                            android:textSize="20sp"
                            android:textColor="#fff"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            />



                    </LinearLayout>

                </LinearLayout>

            </FrameLayout>


        </androidx.appcompat.widget.Toolbar>



    </com.google.android.material.appbar.AppBarLayout>

<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="#fff"
        android:textSize="16sp"
        android:layout_marginBottom="10dp"
        android:layout_gravity="bottom"

        android:id="@+id/tv_next_make_offer"
        android:layout_marginTop="20dp"
        android:text="Next"

        android:layout_marginLeft="10dp"
        android:background="@drawable/countinue_background"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="45dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"
        android:orientation="vertical"
        android:layout_marginRight="10dp"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/black_light"
            android:layout_height="wrap_content"
            android:text="Tell us about the offer you have in mind. You can propose your offer complete privacy."
            />

        <FrameLayout

            android:background="@drawable/background"
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            android:layout_height="175dp">
            <FrameLayout

                android:fitsSystemWindows="true"
                android:background="@drawable/background_image_personal"
                android:layout_width="match_parent"
                android:layout_height="175dp" />
            <FrameLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:background="@drawable/make_offer_img_back"
                android:layout_gravity="bottom"
                android:layout_height="45dp">
                <LinearLayout
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="05dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textColor="#fff"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="â‚¹ 7000"
                        />
                    <TextView
                        android:textColor="#fff"
                        android:layout_marginBottom="03dp"
                        android:textSize="12sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Gurgaon"
                        />


                </LinearLayout>
                <LinearLayout
                    android:layout_gravity="end|center_vertical"
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginRight="50dp"
                    android:layout_marginTop="05dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textColor="#fff"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:layout_gravity="center_horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="5"
                        />
                    <TextView
                        android:textColor="#fff"
                        android:layout_marginBottom="03dp"
                        android:textSize="12sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Bed"
                        />


                </LinearLayout>
                <LinearLayout
                    android:layout_gravity="end|center_vertical"
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="05dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textColor="#fff"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:layout_gravity="center_horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4"
                        />
                    <TextView
                        android:textColor="#fff"
                        android:layout_marginBottom="03dp"
                        android:textSize="12sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Bath"
                        />


                </LinearLayout>




            </FrameLayout>


        </FrameLayout>


        <TextView
            android:layout_width="wrap_content"
            android:textSize="12sp"
            android:layout_marginTop="25dp"
            android:textColor="@color/black_light"
            android:layout_height="wrap_content"
            android:text="You will be notified when user will Accept your offer"
            />


        <TextView

            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="25dp"
            android:background="#A7A6A6" />

        <TextView
            android:layout_width="wrap_content"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="25dp"
            android:textColor="#000"
            android:layout_height="wrap_content"
            android:text="Hello Sahil"
            />

        <TextView
            android:layout_width="wrap_content"
            android:textSize="14sp"
            android:layout_marginTop="15dp"
            android:textColor="@color/black_light"
            android:layout_height="wrap_content"
            android:text="Do you already have buyer for client property"
            />
        <LinearLayout
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <FrameLayout
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:background="@drawable/circle_background"/>
            <TextView
                android:layout_marginLeft="05dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Yes"
                android:textColor="#000"
                android:textSize="14sp"

                />

            <FrameLayout
                android:layout_marginLeft="30dp"
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:background="@drawable/circle_background"/>
            <TextView
                android:layout_marginLeft="05dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No"
                android:textColor="#000"
                android:textSize="14sp"

                />
        </LinearLayout>

        <TextView

            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="20dp"
            android:background="#A7A6A6" />

    </LinearLayout>


</FrameLayout>



</LinearLayout>