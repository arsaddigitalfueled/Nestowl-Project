<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".FiltersScreen">
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" >

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="55dp">
                <TextView
                    android:layout_marginRight="10dp"
                    android:text="Clear All"
                    android:textSize="12sp"
                    android:layout_gravity="end|center_vertical"
                    android:textColor="#fff"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">



                </TextView>



                <LinearLayout
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:src="@drawable/left_arrow"
                        android:layout_width="15sp"
                        android:layout_gravity="center_vertical"
                        android:layout_height="15sp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginLeft="10dp"
                        android:layout_height="wrap_content"
                        >

                        <TextView
                            android:text="Filters"
                            android:textSize="20sp"
                            android:textColor="#fff"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            />




                    </LinearLayout>

                </LinearLayout>


            </FrameLayout>


        </androidx.appcompat.widget.Toolbar>



    </com.google.android.material.appbar.AppBarLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="You're searching in Gurgaon"
            android:textColor="#000"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:textSize="14sp"
            />

        <TextView

            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:background="#A7A6A6" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Filters Applied"
            android:textColor="#000"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:textStyle="bold"
            android:textSize="16sp"

            />
        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <FrameLayout
                android:layout_width="wrap_content"
                android:background="@drawable/employe_circle_rounded"
                android:layout_height="27dp">
                <TextView
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:textSize="12sp"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="10sp"
                    android:textColor="@color/brown_color"
                    android:layout_height="wrap_content"
                    android:text="Sector 52"

                    />

                <ImageView
                    android:src="@drawable/close_icon_search"
                    android:layout_width="08dp"
                    android:layout_marginRight="05dp"
                    android:layout_gravity="end|center_vertical"
                    android:layout_height="08dp" />


            </FrameLayout>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_marginLeft="10dp"
                android:background="@drawable/employe_circle_rounded"
                android:layout_height="27dp">
                <TextView
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:textSize="12sp"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="10sp"
                    android:textColor="@color/brown_color"
                    android:layout_height="wrap_content"
                    android:text="1 BHK"

                    />

                <ImageView
                    android:src="@drawable/close_icon_search"
                    android:layout_width="08dp"
                    android:layout_marginRight="05dp"
                    android:layout_gravity="end|center_vertical"
                    android:layout_height="08dp" />


            </FrameLayout>
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_marginLeft="10dp"
                android:background="@drawable/employe_circle_rounded"
                android:layout_height="27dp">
                <TextView
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:textSize="12sp"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="10sp"
                    android:textColor="@color/brown_color"
                    android:layout_height="wrap_content"
                    android:text="â‚¹ 1.1 Cr- 1.2 Cr"

                    />

                <ImageView
                    android:src="@drawable/close_icon_search"
                    android:layout_width="08dp"
                    android:layout_marginRight="05dp"
                    android:layout_gravity="end|center_vertical"
                    android:layout_height="08dp" />


            </FrameLayout>


        </LinearLayout>


        <TextView

            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:background="#A7A6A6" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Property Type"
            android:textColor="#000"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:textStyle="bold"
            android:textSize="16sp"

            />
        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tab_filter_screen"
            app:tabSelectedTextColor="@color/brown_color"
            app:tabTextColor="#000"
            android:layout_marginLeft="10dp"

            app:tabIndicatorColor="@color/brown_color"

            app:tabIndicatorHeight="03dp"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            app:tabGravity="fill"

            app:tabTextAppearance="@style/tab_text"/>

<FrameLayout
    android:id="@+id/frame_filter_id"

    android:layout_width="match_parent"
    android:layout_height="match_parent">



</FrameLayout>
        <androidx.viewpager.widget.ViewPager
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="match_parent"
            android:visibility="gone"
            android:id="@+id/filters_view_pager"

            android:layout_height="wrap_content">


        </androidx.viewpager.widget.ViewPager>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">




        </ScrollView>


    </LinearLayout>




</LinearLayout>