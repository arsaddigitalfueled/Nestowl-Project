<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:background="@drawable/filter_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="15dp"
            android:textStyle="bold"
            android:textColor="#000"
            android:text="Boost Post"
            />

        <FrameLayout
            android:layout_marginTop="30dp"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="05dp"
            android:layout_width="match_parent"
            android:layout_height="45dp">
            <FrameLayout
                android:layout_gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:layout_gravity="center_vertical"
                    android:text="Gurgaon Rank-10"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    />



                <TextView
                    android:layout_width="1dp"
                    android:layout_marginRight="20dp"
                    android:layout_gravity="center"
                    android:layout_height="22dp"
                    android:background="#A7A6A6" />
                <TextView

                    android:textColor="#000"

                    android:layout_marginRight="95dp"
                    android:layout_gravity="end|center_vertical"
                    android:text="Palam Rank"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    />


            </FrameLayout>


        </FrameLayout>
        <TextView
            android:textColor="#000"
            android:textStyle="bold"
            android:layout_marginTop="75dp"
            android:layout_marginLeft="35dp"
            android:text="Boost Post to get more Customer Reach"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="11sp"
            />
        <FrameLayout
            android:background="@drawable/contact_builder"
            android:layout_width="wrap_content"
            android:layout_marginTop="110dp"
            android:layout_marginBottom="20dp"
            android:layout_gravity="center_horizontal"

            android:layout_height="30dp">
            <TextView
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:textSize="10sp"

                android:id="@+id/tv_view_profile_second"
                android:textColor="#fff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Boost Now"

                />

        </FrameLayout>

    </FrameLayout>


</LinearLayout>