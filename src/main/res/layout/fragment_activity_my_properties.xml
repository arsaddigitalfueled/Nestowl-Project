<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context="com.example.Fragment.ActivityMyProperties">




    <HorizontalScrollView
        android:layout_width="match_parent"
        android:fillViewport="true"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:measureAllChildren="false"
        android:scrollbars="none"
        android:layout_height="32dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <FrameLayout
                android:layout_width="wrap_content"
                android:id="@+id/search_by_filter_properties"
                android:background="@drawable/search_by_activity"
                android:layout_height="match_parent">
              <TextView
                  android:layout_marginLeft="08dp"
                  android:layout_marginRight="08dp"
                  android:layout_width="wrap_content"
                  android:layout_gravity="center"
                  android:layout_height="wrap_content"
                  android:text="Search by Property Id"
                  />


            </FrameLayout>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_marginLeft="05dp"
                android:id="@+id/spiner_filter"

                android:background="@drawable/search_by_activity"
                android:layout_height="wrap_content">
                <Spinner
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:entries="@array/property_status"
                    />


            </FrameLayout>
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_marginLeft="05dp"
                android:layout_marginRight="05dp"

                android:background="@drawable/search_by_activity"
                android:layout_height="wrap_content">
                <Spinner
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:layout_marginLeft="05dp"

                    android:entries="@array/posted_to"
                    />


            </FrameLayout>

<!--
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_marginLeft="05dp"
                android:layout_marginRight="05dp"

                android:background="@drawable/search_by_activity"
                android:layout_height="wrap_content">
                <Spinner
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_marginLeft="05dp"

                    android:entries="@array/property_type"
                    />


            </FrameLayout>
-->


        </LinearLayout>




    </HorizontalScrollView>
    <FrameLayout
        android:layout_marginBottom="60dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_height="match_parent">


            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="75dp"
                    android:layout_gravity="center"
                    android:src="@drawable/post_pro_two"
                    android:layout_height="75dp" />
                <TextView
                    android:layout_width="match_parent"
                    android:gravity="center_horizontal"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:layout_marginTop="15dp"
                    android:textSize="16sp"
                    android:text="No Property posted yet"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="match_parent"
                    android:gravity="center_horizontal"
                    android:textColor="@color/black_light"
                    android:layout_marginTop="10dp"
                    android:textSize="14sp"
                    android:text="You haven't posted any property yet."
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="match_parent"
                    android:gravity="center_horizontal"
                    android:textColor="@color/black_light"
                    android:layout_marginTop="10dp"
                    android:textSize="14sp"
                    android:text="Post public or to nest professional."
                    android:layout_height="wrap_content" />


                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_marginRight="10dp"
                    android:layout_height="@dimen/button_all_45sp"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="05dp"
                    android:background="@drawable/background_edit_camera">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="Post Property"
                        android:textColor="#fff"
                        android:textSize="16sp" />

                </FrameLayout>
            </LinearLayout>



        </FrameLayout>
    </FrameLayout>



</LinearLayout>
