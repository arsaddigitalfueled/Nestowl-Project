<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:orientation="vertical"
    android:background="#AFEBF1"

    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <FrameLayout
        android:layout_marginRight="25dp"
        android:layout_marginBottom="15dp"

        android:layout_width="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_height="wrap_content">
        <FrameLayout
            android:layout_width="10dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/swithc_to_user"
            android:layout_height="10dp">
        </FrameLayout>

        <TextView
            android:layout_width="wrap_content"
            android:textSize="12sp"
            android:layout_marginLeft="15dp"
            android:textColor="#243AB4"
            android:layout_height="wrap_content"
            android:text="Switch to Seller"

            />




    </FrameLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



        <FrameLayout
            android:layout_width="56dp"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="10dp"

            android:background="@drawable/nav_header_back"
            android:layout_height="56dp">
            <ImageView
                android:layout_width="55dp"
                android:layout_height="55dp"

                android:src="@drawable/user_icon_p"
                />

        </FrameLayout>


        <TextView
            android:layout_marginLeft="35dp"
            android:textColor="#000"
            android:textSize="12sp"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sahil Kumar"

            />
    </LinearLayout>
</FrameLayout>
