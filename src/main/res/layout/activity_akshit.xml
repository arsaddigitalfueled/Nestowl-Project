<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".AkshitActivity">
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" >

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="55dp">



                <LinearLayout
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:src="@drawable/left_arrow"
                        android:layout_width="15sp"
                        android:layout_gravity="center_vertical"
                        android:layout_height="15sp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginLeft="10dp"
                        android:layout_height="wrap_content"
                        >




                    </LinearLayout>

                </LinearLayout>

            </FrameLayout>


        </androidx.appcompat.widget.Toolbar>



    </com.google.android.material.appbar.AppBarLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="15dp"
        android:layout_height="match_parent">
        <LinearLayout

            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <FrameLayout
                android:layout_width="45dp"
                android:background="@drawable/circle_background"
                android:layout_height="45dp">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_marginBottom="05dp"
                    android:src="@drawable/face_icon"
                    android:layout_gravity="bottom|center_horizontal"
                    android:layout_height="30dp" />


            </FrameLayout>
            <LinearLayout
                android:layout_marginLeft="05dp"
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rahul Yadav"
                    android:textColor="#000"

                    android:textStyle="bold"
                    android:textSize="16sp"

                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Requirement Accepted by 4 Nest Pro's"
                    android:textColor="@color/black_light"

                    android:textSize="12sp"

                    />




            </LinearLayout>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_marginTop="05dp"
                android:layout_height="wrap_content">


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_gravity="end"
                    android:layout_height="wrap_content">

                    <TextView

                        android:layout_width="wrap_content"
                        android:text="2 Aug, 2007"
                        android:textSize="12dp"
                        android:textColor="@color/black_light"
                        android:layout_height="wrap_content" />


                </LinearLayout>

            </FrameLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="15dp"

            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <FrameLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Requirements"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:textSize="16sp"


                    />
                <FrameLayout
                    android:background="@drawable/chat_sale_back"
                    android:layout_width="wrap_content"
                    android:layout_gravity="end"

                    android:layout_height="25dp">
                    <TextView
                        android:layout_marginLeft="07dp"
                        android:layout_marginRight="07dp"
                        android:textSize="12sp"
                        android:layout_gravity="center"
                        android:textColor="@color/brown_color"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="View Requirements"

                        />

                </FrameLayout>




            </FrameLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content">
            <FrameLayout
                android:layout_width="wrap_content"
                android:background="@drawable/nest_card_back"
                android:layout_weight="1"

                android:layout_height="110dp">
                <FrameLayout
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center_horizontal"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="BHK"
                        android:layout_gravity="center_horizontal"
                        android:textSize="13sp"
                        android:layout_marginTop="10dp"


                        android:textColor="#000"
                        />


                        <TextView
                            android:layout_marginTop="40dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2 BHK"
                            android:layout_gravity="center_horizontal"
                            android:textStyle="bold"
                            android:textSize="16sp"


                            android:textColor="#000"
                            />

                </FrameLayout>




            </FrameLayout>
            <FrameLayout
                android:layout_width="wrap_content"
                android:background="@drawable/nest_card_back"
                android:layout_weight="1"
                android:layout_marginLeft="05dp"

                android:layout_height="110dp">


                <FrameLayout
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center_horizontal"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Type"
                        android:layout_gravity="center_horizontal"
                        android:textSize="13sp"
                        android:layout_marginTop="10dp"


                        android:textColor="#000"
                        />
                    <TextView
                        android:layout_marginTop="40dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Flat"
                        android:layout_gravity="center_horizontal"
                        android:textStyle="bold"
                        android:textSize="16sp"


                        android:textColor="#000"
                        />
                </FrameLayout>


            </FrameLayout>
            <FrameLayout
                android:layout_marginLeft="05dp"
                android:layout_width="wrap_content"
                android:background="@drawable/nest_card_back"
                android:layout_weight="1"

                android:layout_height="110dp">
                <FrameLayout
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center_horizontal"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Location"
                        android:textSize="13sp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="10dp"


                        android:textColor="#000"
                        />
                    <TextView
                        android:layout_marginTop="40dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Gurgaon"
                        android:layout_gravity="center_horizontal"
                        android:textStyle="bold"
                        android:textSize="16sp"


                        android:textColor="#000"
                        />
                </FrameLayout>




            </FrameLayout>




        </LinearLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Requirements Leads"
            android:textColor="#000"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="10dp"
            android:textStyle="bold"
            android:textSize="16sp"

            />
        <FrameLayout
            android:layout_marginTop="15dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/rajesh_singh_background"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="175dp">
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:fillViewport="true"
                android:layout_marginBottom="07dp"
                android:layout_gravity="bottom"
                android:layout_marginLeft="10dp"
                android:measureAllChildren="false"
                android:scrollbars="none"
                android:layout_height="30dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:background="@drawable/nest_pro_rectangle"
                        android:layout_height="30dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="15dp"
                            android:text="Accept"
                            android:textColor="@color/brown_color"

                            />



                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_marginLeft="05dp"
                        android:background="@drawable/nest_pro_rectangle"
                        android:layout_height="30dp">
                        <TextView
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="15dp"
                            android:textColor="@color/brown_color"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Reject"

                            />



                    </FrameLayout>
                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_marginLeft="05dp"
                        android:background="@drawable/nest_pro_rectangle"
                        android:layout_height="30dp">
                        <TextView
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="15dp"
                            android:textColor="@color/brown_color"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Chat"

                            />



                    </FrameLayout>
                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_marginLeft="05dp"
                        android:background="@drawable/nest_pro_rectangle"
                        android:layout_height="30dp">
                        <TextView
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="10dp"

                            android:layout_marginRight="10dp"
                            android:textColor="@color/brown_color"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="View Proposal"

                            />



                    </FrameLayout>





                </LinearLayout>



            </HorizontalScrollView>

            <LinearLayout

                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <FrameLayout
                    android:layout_width="45dp"
                    android:background="@drawable/circle_background"
                    android:layout_height="45dp">
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_marginBottom="05dp"
                        android:src="@drawable/face_icon_two"
                        android:layout_gravity="bottom|center_horizontal"
                        android:layout_height="30dp" />


                </FrameLayout>
                <LinearLayout
                    android:layout_marginLeft="05dp"
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rajesh Singh"
                        android:textColor="#000"

                        android:textStyle="bold"
                        android:textSize="16sp"

                        />

                        <FrameLayout
                            android:background="@drawable/eligible_for_second_deal"
                            android:layout_width="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:layout_height="25dp">
                            <TextView
                                android:layout_gravity="center"
                                android:layout_marginLeft="05dp"
                                android:layout_marginRight="05dp"
                                android:textSize="10sp"
                                android:textColor="@color/black_light"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="View Profile"

                                />

                        </FrameLayout>



                    </LinearLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sector 23, Noida"
                        android:textColor="@color/black_light"
                        android:textSize="12sp"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Deals in- Residential, Commercial other"
                        android:textColor="@color/black_light"
                        android:textSize="12sp"
                        />

                    <FrameLayout
                        android:background="@drawable/eligible_for_second_deal"
                        android:layout_width="wrap_content"
                        android:layout_marginTop="05dp"

                        android:layout_height="25dp">
                        <TextView
                            android:layout_gravity="center"
                            android:layout_marginLeft="05dp"
                            android:layout_marginRight="05dp"
                            android:textSize="10sp"
                            android:id="@+id/tv_view_profile"
                            android:textColor="@color/black_light"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Eligible for Second Deal Offer"

                            />

                    </FrameLayout>




                </LinearLayout>
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="05dp"
                    android:layout_height="wrap_content">


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_gravity="end"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_width="22dp"
                            android:layout_gravity="center"
                            android:src="@drawable/nest_circle_back"
                            android:layout_height="22dp" />


                        <ImageView
                            android:layout_width="22dp"
                            android:layout_marginLeft="05dp"
                            android:layout_gravity="center"
                            android:src="@drawable/nest_circle_back"
                            android:layout_height="22dp" />
                    </LinearLayout>

                </FrameLayout>

            </LinearLayout>

            <TextView

                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="55dp"
                android:layout_gravity="bottom"
                android:background="#A7A6A6" />




        </FrameLayout>


    </LinearLayout>


</LinearLayout>