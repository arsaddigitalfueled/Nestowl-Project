<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.Fragment.MyRequirementsSecond">

    <RadioGroup
        android:id="@+id/rg_two"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="45dp">



        <RadioButton
            android:id="@+id/radio_rq"
            android:buttonTint="@color/black_light"
            android:layout_weight="1"
            android:textSize="14sp"
            android:checked="false"
            android:textColor="#000"
            android:text="Accepted"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <RadioButton

            android:id="@+id/radiobutton_rq"

            android:checked="false"

            android:layout_weight="1"
            android:buttonTint="@color/black_light"

            android:textSize="14sp"
            android:textColor="#000"
            android:text="Reject"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <RadioButton
            android:id="@+id/radiobutton_rq_tw"

            android:checked="false"

            android:layout_weight="1"
            android:buttonTint="@color/black_light"


            android:textSize="14sp"
            android:textColor="#000"
            android:text="Pending"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


    </RadioGroup>
<FrameLayout
    android:layout_marginRight="10dp"
    android:layout_marginLeft="10dp"
    android:id="@+id/requirement_proposal_card"
    android:background="@drawable/background_search"
    android:layout_width="match_parent"
    android:layout_height="145dp">
    <LinearLayout

        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <FrameLayout
            android:layout_marginTop="07dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

<TextView

    android:textStyle="bold"
    android:textColor="#000"
    android:textSize="14sp"
    android:layout_gravity="center_vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Requirement Proposal"
    />

            <TextView

                android:textColor="#000"
                android:layout_gravity="end|center_vertical"
                android:textSize="10sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2 aug 2017"
                />

        </FrameLayout>
        <FrameLayout
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="25dp">
            <LinearLayout
                android:layout_gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:textColor="#000"
                    android:layout_gravity="center_vertical"
                    android:text="2 BHK"

                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    />

                <TextView
                    android:layout_marginLeft="10sp"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="bottom"
                    android:background="#A7A6A6" />
                <TextView
                    android:textColor="#000"
                    android:layout_marginLeft="10sp"
                    android:layout_gravity="center_vertical"
                    android:text="Gurgaon"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    />

                <TextView
                    android:layout_marginLeft="10sp"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="bottom"
                    android:background="#A7A6A6" />
                <TextView
                    android:textColor="#000"
                    android:layout_marginLeft="10sp"
                    android:layout_gravity="center_vertical"
                    android:text="3-4 Crore"

                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    />
                <TextView
                    android:layout_marginLeft="10sp"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="bottom"
                    android:background="#A7A6A6" />
                <TextView

                    android:layout_weight="1"
                    android:textColor="#000"
                    android:layout_marginLeft="12sp"
                    android:layout_gravity="end|center_vertical"
                    android:text="680 Sq.ft."
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    />


            </LinearLayout>


        </FrameLayout>
        <LinearLayout
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/lead_unlock_alert"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:paddingRight="05dp"
            android:gravity="center_vertical"
            android:paddingLeft="05dp"
            android:layout_height="20dp">



            <TextView
                android:gravity="center_vertical"
                android:textColor="#000"
                android:text="Proposal Accepted "

                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                />
            <ImageView
                android:layout_marginLeft="05dp"
                android:layout_width="15dp"
                android:src="@drawable/right_arrow"
                android:layout_height="15dp" />

            <TextView
                android:textColor="#000"
                android:layout_marginLeft="05dp"
                android:layout_gravity="center_vertical"
                android:text="by 3 Nest Pro "

                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                />


        </LinearLayout>



        <TextView

            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#A7A6A6" />
        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="42dp">

            <FrameLayout
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:layout_width="match_parent"
                android:background="@drawable/nest_pro_rectangle"
                android:layout_height="28dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:text="View Requirement"
                    android:textColor="@color/brown_color"

                    />



            </FrameLayout>
            <FrameLayout

                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="05dp"
                android:background="@drawable/nest_pro_rectangle"
                android:layout_height="28dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:text="View Leads"
                    android:textColor="@color/brown_color"

                    />



            </FrameLayout>





        </LinearLayout>


    </LinearLayout>


</FrameLayout>

</LinearLayout>
